---
interface Props {
    title: string;
    icon: string;
}
const { title, icon } = Astro.props as Props;
---

<div
    class="content-center text-center justify-center bg-secondary shadow-lg mt-8 px-10 py-6 rounded-md"
>
    <!-- <slot name="icon" /> -->
    <i class={"text-primary mb-0 text-4xl " + icon}></i>
    <h3 class="font-semibold text-xl mb-3">{title}</h3>
    <slot />
</div>
